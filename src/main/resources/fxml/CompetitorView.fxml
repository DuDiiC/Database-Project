               <children>
                  <Label text="Imię" />
                  <TextField fx:id="nameTextField" />
                  <Label text="Nazwisko" />
                  <TextField fx:id="surnameTextField" />
                  <Label text="Płeć" />
                  <ComboBox fx:id="genderComboBox" prefWidth="150.0" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="800.0" spacing="20.0">
               <children>
                  <Label text="PESEL" />
                  <TextField fx:id="peselTextField" />
                  <Label text="Klub" />
                  <ComboBox fx:id="clubComboBox" prefWidth="150.0" />
